<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :event_date %>
    <%= f.input :event_end %>
    <%= f.input :event_name %>
    <%= f.input :location %>
    <%= f.input :event_description %>
    <%= f.input :in_footer, label: "In footer?" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
