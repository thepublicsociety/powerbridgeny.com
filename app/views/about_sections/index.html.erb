<%= render :partial => "layouts/admin_header" %>
<h1>Listing about sections</h1>

<table class='table'>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Section</th>
    <th>Active</th>
    <th></th>
    <th></th>
  </tr>

<% @about_sections.each do |about_section| %>
  <tr>
    <td><%= about_section.title %></td>
    <td><%= about_section.content.blank? ? "" : about_section.content.html_safe %></td>
    <td><%= about_section.section %></td>
    <td><%= about_section.active %></td>
    <td><%= link_to 'Edit', edit_about_section_path(about_section) %></td>
    <td><%= link_to 'Destroy', about_section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New About section', new_about_section_path %>
