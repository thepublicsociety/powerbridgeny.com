<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <a href='#' class='toHTML btn btn-default btn-xs'>HTML Mode</a>
    <div style='height: 4px'></div>
    <a data-toggle="modal" href="#attachments" class='btn btn-default btn-xs'>Add attachment</a>
    <div style='height: 30px'></div>
    <%= f.label :section %>
    <%= f.collection_select :section, [["cleantech", "Cleantech"], ["awardees", "Awardees"]], :first, :last %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
