<%= render :partial => "layouts/admin_header" %>
<h1>Listing posts</h1>

<table class='table'>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Section</th>
    <th>Active</th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content.blank? ? "" : post.content.html_safe %></td>
    <td><%= post.section %></td>
    <td><%= post.active %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
