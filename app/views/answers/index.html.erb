<%= render :partial => "layouts/admin_header" %>
<h1>Listing answers</h1>

<table class='table'>
  <tr>
    <th>Question</th>
    <th>Answer</th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.question.blank? ? "" : answer.question.title %></td>
    <td><%= answer.content.html_safe unless answer.content.blank? %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

